<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/thingImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:paddingTop="400dp"
        android:src="@drawable/ic_mask"
        app:layout_constraintBottom_toBottomOf="@id/thingImage"
        app:layout_constraintEnd_toEndOf="@id/thingImage"
        app:layout_constraintStart_toStartOf="@+id/thingImage" />

    <TextView
        android:id="@+id/thingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/thingImage"
        app:layout_constraintEnd_toEndOf="@+id/thingImage"
        app:layout_constraintStart_toStartOf="@+id/thingImage"
        tools:text="Random Thing" />

</androidx.constraintlayout.widget.ConstraintLayout>